<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#73A8A7"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_margin="6dp"
                android:id="@+id/spid"
                app:cardCornerRadius="16dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spid2"/>

                <TextView
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:background="#B3000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spid kasalligi"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                android:id="@+id/Sil"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sil2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#B3000000"
                    android:gravity="center"
                    android:text="Sil kasalligi"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                android:id="@+id/saraton"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="226dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/saraton2" />

                <TextView
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:background="#B3000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saraton Kasalligi"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                android:id="@+id/insult"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="226dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/insult2" />

                <TextView
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:background="#B3000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Insult Kasalligi"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</FrameLayout>